{
  "name": "@1onlinesolution/dws-hermes",
  "version": "0.1.2",
  "description": "Hermes service",
  "main": "server.js",
  "scripts": {
    "patch": "npm version patch",
    "minor": "npm version minor",
    "major": "npm version major",
    "lint": "eslint *.js src/**/*.js",
    "debug": "NODE_ENV=development nodemon --config nodemon.json",
    "start": "NODE_ENV=production node server.js",
    "test": "NODE_ENV=test mocha",
    "docker_build": "docker build -t dws-hermes:1.0 ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1onlinesolution/dws-hermes.git"
  },
  "author": "1onlinesolution",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/1onlinesolution/dws-hermes/issues"
  },
  "homepage": "https://github.com/1onlinesolution/dws-hermes#readme",
  "devDependencies": {
    "dotenv": "^10.0.0",
    "eslint": "^7.28.0",
    "eslint-plugin-security": "^1.4.0",
    "mocha": "^9.0.0",
    "prettier": "^2.3.1",
    "supertest": "^6.1.3"
  },
  "dependencies": {
    "@1onlinesolution/dws-http": "^0.0.2",
    "@1onlinesolution/dws-mail": "^0.1.0",
    "body-parser": "^1.19.0",
    "colors": "^1.4.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "nodemon": "^2.0.7",
    "uuid": "^8.3.2"
  },
  "mocha": {
    "watch-files": [
      "test/**/*.spec.js"
    ],
